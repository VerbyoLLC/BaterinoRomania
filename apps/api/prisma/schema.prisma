// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                        String    @id @default(cuid())
  email                     String    @unique
  password                  String
  role                      String    // "client" | "partener"
  verificationCode          String?
  verificationCodeExpiresAt DateTime?
  passwordResetToken        String?
  passwordResetExpiresAt    DateTime?
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
  partner                   Partner?
}

model Partner {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Profil legal (SignupParteneriProfil)
  companyName           String
  cui                   String
  address               String?
  tradeRegisterNumber   String?
  activityTypes         String   // "instalator,distribuitor,integrator,altul" (comma-separated)
  contactFirstName      String
  contactLastName       String
  phone                 String   // telefon contact principal

  // Profil public (SignupParteneriProfilPublic)
  logoUrl               String?
  publicName            String?
  street                String?
  county                String?
  city                  String?
  zipCode               String?
  description           String?
  services              String?  // "fotovoltaice,baterii,..." (comma-separated)
  publicPhone           String?
  whatsapp              String?
  website               String?
  facebookUrl           String?
  linkedinUrl           String?
  isPublic              Boolean  @default(true)
  isSuspended           Boolean  @default(false)
  isApproved            Boolean  @default(false)  // aprobat de admin
  partnerDiscountPercent Float?   // reducere % acordată de admin (ex: 10 = 10% off)

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model ReducereProgram {
  id              String   @id @default(cuid())
  locale          String   // "ro" | "en" | "zh"
  photo           String
  programLabel    String
  title           String
  descriereScurta String?
  description     String
  ctaLabel        String   @default("CREEAZĂ CONT")
  ctaTo           String   @default("/login")
  termsLabel      String
  topIcon         String?
  stiaiCaTitle    String?
  stiaiCaText     String?
  durataProgram   String?
  discountPercent Int?
  isActive        Boolean  @default(true)
  sortOrder       Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
